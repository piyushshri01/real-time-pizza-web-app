<section class="login flex">
    <div class="w-full max-w-xs m-auto bg-indigo-100 rounded p-5">   
          <header>
            <img class="w-20 mx-auto mb-5" src="https://img.icons8.com/fluent/344/year-of-tiger.png" />
          </header>   
          <form action="/register" method="POST">
            <% if(messages.error){ %>
            <span class="text-red-500 text-sm"><%= messages.error %></span>
            <% } %>
            <div>
                <label class="block mb-2 text-indigo-500">Name</label>
                <input value="<%= messages.name %>" class="w-full p-2 mb-6 border-b-2 border-indigo-500 outline-none focus:bg-gray-300" type="text" name="name">
              </div>
            <div>
              <label class="block mb-2 text-indigo-500">Email</label>
              <input value="<%= messages.email %>" class="w-full p-2 mb-6 border-b-2 border-indigo-500 outline-none focus:bg-gray-300" type="email" name="email">
            </div>
            <div>
              <label class="block mb-2 text-indigo-500">Password</label>
              <input class="w-full p-2 mb-6  border-b-2 border-indigo-500 outline-none focus:bg-gray-300" type="password" name="password">
            </div>
            <div>          
              <button class="w-full btn-primary text-white font-bold py-2 px-4 mb-6 rounded" type="submit">Register</button>
            </div>       
          </form>  
          <footer>
            <span>Already have an account</span>
            <a class="text-indigo-700 hover:text-pink-700 text-sm float-left" href="/login">Login</a>
            <!-- <a class="text-indigo-700 hover:text-pink-700 text-sm float-right" href="/login">Create Account</a> -->
          </footer>   
        </div>
</section>